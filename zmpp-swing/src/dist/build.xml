<project name="zmpp" default="dist" basedir=".">
  <description>
    Build file for Zmpp with user interface
  </description>
  <!-- set global properties for this build -->  
  <property file="build.properties" />
  
  <target name="init">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build.prj}"/>
  </target>

  <target name="compile" depends="init">
    <javac debug="on" srcdir="${src.prj}" destdir="${build.prj}">
      <classpath>
  			<pathelement location="${build.prj}"/>
  	  </classpath>
    </javac>
  </target>
  
  <target name="dist" depends="compile">
    <jar jarfile="zmpp-${app.version}.jar" index="true">
    	<manifest>
      	<attribute name="Built-By" value="Wei-ju Wu"/>
        <attribute name="Main-Class" value="org.zmpp.swingui.Main"/>
    	</manifest>
    	<fileset dir="${build.prj}" />
    </jar>
  </target>

  <target name="clean">
    <delete dir="${build.prj}"/>
  </target>
</project>
