<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="zmpp-core-IDE">
    <!-- reuse definitions from project file -->
    <import file="../build.xml" />
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-test">
        <fail unless="files">Must set property 'files'</fail>
        <!-- TODO decide on and define some value for ${build.classes.dir} -->
        <mkdir dir="${build.classes.dir}"/>
        <javac destdir="${build.classes.dir}" includes="${files}" source="1.5" srcdir="src/test">
          <classpath>
            <pathelement location="${build.prj}"/>
          </classpath>
          <classpath refid="junit.path" />
        </javac>
    </target>
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-test">
        <fail unless="test.class">Must set property 'test.class'</fail>
        <junit showoutput="true" printsummary="true">
            <classpath refid="junit.path" />
            <classpath>
                <pathelement location="${build.prj}"/>
                <pathelement location="${build.tests}"/>
            </classpath>
            <formatter type="brief" usefile="false" />
            <formatter type="xml" />
            <sysproperty key="user.dir" value="${basedir}"/>
            <test name="${test.class}" />
        </junit>
    </target>
</project>
